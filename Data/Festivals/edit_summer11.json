		// Lewis substitutions //

		// Marnie dialogue
		
		{
			"LogName": "Luau - Marnie Substitutes - mainEvent",
			"Action": "EditData",
			"Target": "Data/Festivals/summer11",
			
			"When": {
				"MarnieSubLewis": true,
			},
			
			"Fields": {
				"mainEvent": {
					"23": "speak Lewis \"Alright, everyone! It's time for the potluck ceremony.#$b#I have faith that you all put your highest-quality ingredients in the pot this year. Let's not disappoint the governor!\""
					"27": "speak Lewis \"Well... governor? Care to take a sip?\"",
				},

				"governorReaction0": {
					"19": "speak Lewis \"Oh dear... Whoever put that foul ingredient in the soup made the governor pass out! What a shame...$4\""
				},
				
				"governorReaction6": {
					"43": "speak Lewis \"H-how dare you all! It's bad enough to riffle through a dead man's belongings, but you went and ruined the festival the soup everyone worked so hard on... you've ruined all of it!$4#$b#You've embarrassed me, you've sickened the governor... and you've sickened me, too, come to think of it! All the hard work everyone put in, gone to waste. I've never been more ashamed of this community... get out. All of you.$4\""
				}
			}
		},
				
		{
			"LogName": "Luau - Marnie Substitute dialogue",
			"Action": "EditData",
			"Target": "Data/Festivals/summer11",
			
			"When": {
				"MarnieSubLewis": true,
			},
			
			"Entries": {
				"Lewis": "Welcome to the Luau, @! Let's all stay on our best behavior... the governor's here for his annual visit.#$b#If you brought something for the potluck, make sure you add it to the soup cauldron. Everyone should participate.$h",
			}
		},
		
		// Wizard dialogue
		
		{
			"LogName": "Luau - Wizard Substitutes - governorReaction6",
			"Action": "EditData",
			"Target": "Data/Festivals/summer11",
			
			"When": {
				"WizardSubLewis": true,
			},
			
			"Fields": {
				"governorReaction6": {
					"13": "textAboveHead Lewis \"Why...?\""
					"43": "speak Lewis \"...We only get so many festivals, you know. I know they can get stale, year after year, but they are still a limited resource.$s#$b#If this is truly what you wish to do, then... I suppose I'll just wait until next year. Go home, everyone.$s\""
				}
			}
		},
		
		{
			"LogName": "Luau - Wizard Substitute dialogue",
			"Action": "EditData",
			"Target": "Data/Festivals/summer11",
			
			"When": {
				"WizardSubLewis": true,
			},
			
			"Entries": {
				"Lewis": "Keep your wits about you, @; the governor has arrived for his annual visit.#$b#If you brought something for the potluck, toss it into the soup cauldron.#$b#And before you ask, no, it's not a potion-making cauldron. I have a different one at home for doing that.$a",
			}
